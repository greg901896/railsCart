<%= simple_form_for product, url: products_path do |f| %>
    <%= f.input :title, placeholder: t("projectName") %>
    <%= f.input :description, placeholder: t("describe") %>
    <%= f.input :price, placeholder: t("price") %>
    <%= f.input :type, placeholder: t("type") %>

    <%= f.submit class: "btn btn-default btn-primary" %>
    <br>
    <% current_user.id%>
    
  <% end %>



