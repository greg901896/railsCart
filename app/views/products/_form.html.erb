<%= simple_form_for product, url: products_path do |f| %>
    <%= f.input :title,label: t("name"), placeholder: t("projectName") %>
    <%= f.input :description,label: t("description"), placeholder: t("describe") %>
    <%= f.input :price,label: t("price"), placeholder: t("price") %>
    <%= f.input :type,label: t("type"), placeholder: t("type") %>

    <%= f.submit class: "btn btn-default btn-primary" %>
    <br>
    <% current_user.id%>
    
  <% end %>



